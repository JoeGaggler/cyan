{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"presentation": {
				"reveal": "silent",
				"clear": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"run"
			],
			"group": "none",
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"presentation": {
				"reveal": "silent",
				"clear": true
			},
			"problemMatcher": "$msCompile"
		}
	]
}
